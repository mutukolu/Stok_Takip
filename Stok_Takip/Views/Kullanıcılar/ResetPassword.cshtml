

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sifremi Unuttum Sayfası</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/LoginScripts/Scriptler/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/LoginScripts/Scriptler/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form method="post" class="login100-form validate-form">
                    <span class="login100-form-title p-b-49">
                        Şifre Sıfırlama Sayfası
                    </span>

                    <div class="wrap-input100 validate-input m-b-23">
                        <span class="label-input100">Kullanıcı</span>
                        <input class="input100" type="text" name="Email" placeholder="Email adresinizi giriniz">
                        <span class="focus-input100" data-placement="E-mail Adresi" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Şifreyi Sıfırla
                            </button>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        @if (ViewBag.hata != null)
                        {
                            <p class="text-danger">@ViewBag.hata</p>
                        }
                    </div>
               
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlervendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlervendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlervendor/bootstrap/js/popper.js"></script>
    <script src="~/LoginScripts/Scriptlervendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlervendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlervendor/daterangepicker/moment.min.js"></script>
    <script src="~/LoginScripts/Scriptlervendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlervendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginScripts/Scriptlerjs/main.js"></script>

</body>
</html>