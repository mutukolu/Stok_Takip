@model  Stok_Takip.Models.Entity.Birimler

@{
    ViewBag.Title = "GüncelleBilgiGetir";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Birim Güncelleme Sayfası</h2>

<div class="container">
    @using (Html.BeginForm("Guncelle", "Birimler", FormMethod.Post))
    {

        @Html.HiddenFor(x => x.ID)
        <div class="form-group">
            @Html.LabelFor(x => x.Birim)
            @Html.TextAreaFor(x => x.Birim, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Birim, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama)
            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button class="btn btn-success">Birimi Güncelle</button>
        </div>
    }
</div>
@section danger
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

