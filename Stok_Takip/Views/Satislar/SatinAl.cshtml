@model Stok_Takip.Models.Entity.Sepet
@{
    ViewBag.Title = "SatinAl";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="model-header">
    <h2>Satın Al</h2>
</div>

<div class="container">
    @using (Html.BeginForm("SatinAlMesaj", "Satislar", FormMethod.Post))
    { 
        <div class="modal-body">
            @Html.HiddenFor(x => x.ID)
            <div class="form-group">
                Kullanıcı Ad Soyad : @Html.DisplayFor(x => x.Kullanıcılar.AdiSoyadi, new { @class = "form-control" })
            </div>

            <div class="form-group">
                Ürün Adı : @Html.DisplayFor(x => x.Ürünler.UrunAdı, new { @class = "form-control" })
            </div>

            <div class="form-group">
                Birim Fiyatı : @Html.DisplayFor(x => x.Ürünler.SatisFiyat, new { @class = "form-control" })
            </div>

            <div class="form-group">
                Miktarı : @Html.DisplayFor(x => x.BirimMiktar, new { @class = "form-control" })
            </div>

            <div class="form-group text-center" style="font-size:25px;color:red">
                Toplam Fiyatı : @Html.DisplayFor(x => x.ToplamFiyat, new { @class = "form-control" })
            </div>


        </div>
        <div class="modal-footer" style="float:right">
            <button class="btn btn-success">Satın Al</button>
            <a href="/Sepet/Index" class="btn btn-dark">Çıkış</a>
        </div>
    }
</div>