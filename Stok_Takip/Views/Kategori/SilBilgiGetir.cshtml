@model  Stok_Takip.Models.Entity.Kategoriler
@{
    ViewBag.Title = "SilBilgiGetir";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Kategori Silme Sayfası</h2>
<div class="container">
    @using (Html.BeginForm("Sil", "Kategori"))
    {
        <h1></h1>
        <h4>Kayıt silinsin mi?</h4>
        <div class="form-group">
            @Html.HiddenFor(x => x.ID)
            <b>@Html.LabelFor(x => x.Kategori):</b>
            @Html.DisplayFor(x => x.Kategori, new { @class = "form-control" })
        </div>
        <div>
            <b>@Html.LabelFor(x => x.Aciklama):</b>
            @Html.DisplayFor(x => x.Aciklama, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-danger">Kategori Sil</button>
            
            <a class="btn btn-success" href="/Kategori/Index/">Ana Sayfa</a>
        </div>

    }

</div>
