

@model  Stok_Takip.Models.Entity.Markalar
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Marka Ekleme Sayfası</h2>
<div class="container">
    @using (Html.BeginForm("Ekle", "Markalar", FormMethod.Post))
    {
        <div class="form-group">

            @Html.LabelFor(x => x.Kategoriler.Kategori)
            @Html.DropDownList("KategoriID", (List<SelectListItem>)ViewBag.l, "---Seçiniz---", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.KategoriID, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Markalar1)
            @Html.TextBoxFor(x => x.Markalar1, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Markalar1, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama)
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
        </div>
        <div>

            <button class="btn btn-success">Marka Ekle</button>
        </div>
    }
</div>
@section danger 
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}



